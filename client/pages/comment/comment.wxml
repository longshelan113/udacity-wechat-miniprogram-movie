<!--pages/comment/comment.wxml-->
<view class='wrapper'>
  <view class='comment-list'>
    <view class='comment-option' wx:for='{{commentList}}' wx:key='id'>
      <view class='option-user'>
        <image class='option-image' src='{{item.avatar}}' mode='widthFix'></image> 
        <view class='option-userName'>{{item.userName}}</view>
      </view>
      <view class='option-content'>{{item.content}}</view>
    </view>

  </view>
</view>

<view class='footer'>
  <view class='footer-option' bindtap='goToHome'>
    <view class='hotfilm-text'>返回首页</view>
  </view>
</view>
